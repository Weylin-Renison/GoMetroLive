<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnFWRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/xtra_large_btn_padding_top_bot"
        android:paddingBottom="@dimen/xtra_large_btn_padding_top_bot"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_blue_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/large_text"
        android:text="@string/fragW_btn_register"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnFWLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/xtra_large_btn_padding_top_bot"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingBottom="@dimen/xtra_large_btn_padding_top_bot"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/btnFWRegister"
        android:layout_alignTop="@id/btnFWRegister"
        android:background="@drawable/selector_blue_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/large_text"
        android:text="@string/fragW_btn_login"
        android:visibility="visible"/>

</RelativeLayout>